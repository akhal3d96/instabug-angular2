require('load-grunt-tasks')(grunt); // npm install --save-dev load-grunt-tasks

module.exports = function (grunt) {

  grunt.initConfig({
    build: {
      options: {
        stderr: false
      },
      target: {
        command: 'npx ng build'
      },
      another: 'ls ./src' // shorthand
    }
  });


  grunt.registerTask('default', ['build']);

};
